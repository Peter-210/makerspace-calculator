{
	"version": 6,
	"cmakeMinimumRequired": {
		"major": 3,
		"minor": 24,
		"patch": 0
	},
	"configurePresets": [
		{
			"name": "config-default",
			"generator": "Unix Makefiles",
			"binaryDir": "${sourceDir}/build",
			"cacheVariables": {
				"CMAKE_C_COMPILER": "gcc",
				"CMAKE_CXX_COMPILER": "g++"
			}
		},
		{
			"name": "config-debug",
			"inherits": "config-default",
			"cacheVariables": {
				"ENABLE_DEBUG": "ON"
			}
		},
		{
			"name": "config-testing",
			"inherits": "config-debug",
			"cacheVariables": {
				"ENABLE_DEBUG": "ON",
				"ENABLE_TESTS": "ON"
			}
		}
	],
	"buildPresets": [
		{
			"name": "build-default",
			"configurePreset": "config-default"
		},
		{
			"name": "build-debug",
			"configurePreset": "config-debug"
		},
		{
			"name": "build-testing",
			"configurePreset": "config-testing"
		}
	],
	"workflowPresets": [
		{
			"name": "main",
			"steps": [
				{
					"type": "configure",
					"name": "config-default"
				},
				{
					"type": "build",
					"name": "build-default"
				}
			]
		},
		{
			"name": "debug",
			"steps": [
				{
					"type": "configure",
					"name": "config-debug"
				},
				{
					"type": "build",
					"name": "build-debug"
				}
			]
		},
		{
			"name": "testing",
			"steps": [
				{
					"type": "configure",
					"name": "config-testing"
				},
				{
					"type": "build",
					"name": "build-testing"
				}
			]
		}
	]
}
